$TTL	604800
{{ domain_name }}.	IN	SOA	{{ groups['dns_servers'][0] }}.{{ domain_name }}. alexander.{{ domain_name }}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
{{ domain_name }}.	IN	NS	{{ groups['dns_servers'][0] }}
{% for host in groups['all'] %}
{{ hostvars[host]['ansible_hostname'] }}  IN  A  {{ hostvars[host]['ansible_default_ipv4']['address']}}
{% endfor %}
{{ backup_server_name }}  IN  A  {{ backup_server_ip }}


